# GraphQL schema example
#
# https://gqlgen.com/getting-started/

interface Node {
  id: ID!
}

type Todo implements Node{
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User {
  id: ID!
  name: String!
}

type Query {
  todos: [Todo!]!
  node(id: ID!): Node
  nodes(ids: [ID!]!): [Node]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
